.libmedia-ui-slider {
  cursor: pointer
  width: 100%
  height: 100%
  position: relative
  justify-content: center
  display: flex

  .libmedia-ui-slider-outer {
    border-radius: var(--libmedia-ui-border-radius)
    background-color: #ffffff40
    justify-content: center
    display: flex
    position: relative
    overflow: hidden

    .libmedia-ui-slider-inner {
      background-color: var(--libmedia-ui-theme)
      width: 100%
      height: 100%
      position: absolute
    }
  }
  .libmedia-ui-slider-thumb {
    width: var(--libmedia-ui-slider-thumb-size)
    height: var(--libmedia-ui-slider-thumb-size)
    background-color: var(--libmedia-ui-theme)
    transition: transform var(--libmedia-ui-transition-duration) ease
    border-radius: 100%
    flex-shrink: 0
    position: absolute
    transform: scale(1)
  }

  &[data-direction='vertical'] {
    .libmedia-ui-slider-outer {
      width: var(--libmedia-ui-slider-thickness)
      height: 100%
    }
    .libmedia-ui-slider-thumb {
      margin-top: calc(var(--libmedia-ui-slider-thumb-size) / -2)
    }
  }
  &[data-direction='horizontal'] {
    .libmedia-ui-slider-outer {
      width: 100%
      height: var(--libmedia-ui-slider-thickness)
    }
    .libmedia-ui-slider-thumb {
      margin-right: calc(var(--libmedia-ui-slider-thumb-size) / -2)
    }
  }
}