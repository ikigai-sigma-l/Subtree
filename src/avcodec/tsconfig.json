{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declarationMap": false,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "avformat/*": ["../avformat/*"],
      "avprotocol/*": ["../avprotocol/*"],
      "avutil/*": ["../avutil/*"],
      "avcodec/*": ["../avcodec/*"],

      "cheap/*": ["../cheap/*"],
      "common/*": ["../common/*"]
    },
    "allowJs": false
  },
  "include": [
    "./**/*.ts",
    "../cheap/**/*.ts",
    "../common/types/*.ts",
    "../../@types/index.d.ts",
    "../avformat/**/*.ts",
    "../avutil/**/*.ts",
    "../avprotocol/**/*.ts"
  ]
}